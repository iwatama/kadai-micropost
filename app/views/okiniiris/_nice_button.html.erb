<% if current_user.nice?(micropost) %>
    <%= form_for(current_user.okiniiris.find_by(micropost_id: micropost), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost %>
      <%= f.submit 'UnNice', class: 'btn btn-success' %>
    <% end %>
<% else %>
    <%= form_for(current_user.okiniiris.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost %>
      <%= f.submit 'nice', class: 'btn btn-primary' %>
    <% end %>
<% end %>

