<ul class="media-list">
  <% microposts.each do |micropost| %>
    <% user = micropost.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(current_user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div class = "kiji">
          id = <%= micropost.id %><br>  
          <%= micropost.content %>
        </div>
        <div class="kiji_button">
          <%= render 'okiniiris/unnice_button', micropost: micropost.id, user: @user %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>